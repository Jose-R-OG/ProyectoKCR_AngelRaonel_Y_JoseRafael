@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador")]
@page "/lista-empleados"
@using KCR.Models
@using KCR.Services
@layout MainLayout
@inject NavigationManager navigationManager
@inject EmpleadoService empleadoService
@rendermode InteractiveServer

<div class="lista-empleados-page">
    <div class="content">
        <div class="list-card">
            <h1 class="list-title">LISTADO DE EMPLEADOS</h1>

            <div class="top-toolbar">
                <div class="filter-group">
                    <label>Filtrar por</label>
                    <select class="form-select" @bind="Filtro">
                        <option value="">Seleccione</option>
                        <option value="Nombre">Nombre</option>
                        <option value="Cargo">Cargo</option>
                        <option value="IdEmpleado">ID</option>
                    </select>
                </div>
                <div class="search-group">
                    <label>Búsqueda</label>
                    <div class="search-input-container">
                        <input type="text" class="form-control"
                               placeholder="Buscar..."
                               @bind="ValorFiltro"
                               @oninput="Buscar" />
                        <span class="search-icon"><i class="bi bi-search"></i></span>
                    </div>
                </div>
                <div class="button-group">
                    <button class="btn-action btn-registrar" @onclick="RegistrarNuevo">
                        <i class="bi bi-plus-circle"></i> Nuevo Empleado
                    </button>
                </div>
            </div>

            <div class="table-container">
                @if (isLoading)
                {
                    <p class="loading-message"><i class="bi bi-hourglass-split"></i> Cargando empleados...</p>
                }
                else if (!EmpleadosFiltrados.Any())
                {
                    <p class="no-results-message"><i class="bi bi-exclamation-triangle"></i> No se encontraron empleados.</p>
                }
                else
                {
                    <div class="table-scroll-wrapper">
                        <table class="modern-empleados-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Cédula</th>
                                    <th>Cargo</th>
                                    <th>Usuario</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var empleado in EmpleadosFiltrados)
                                {
                                    <tr>
                                        <td data-label="ID" class="text-center"><strong>#@empleado.IdEmpleado</strong></td>
                                        <td data-label="Nombre">@empleado.Nombre</td>
                                        <td data-label="Cédula">@empleado.Cedula</td>
                                        <td data-label="Cargo">
                                            <span class="badge badge-cargo">@empleado.Cargo</span>
                                        </td>
                                        <td data-label="Usuario">@empleado.Usuario</td>
                                        <td data-label="Acciones" class="action-cell">
                                            <button class="btn-action btn-modificar btn-sm"
                                                    @onclick="() => Modificar(empleado.IdEmpleado)">
                                                <i class="bi bi-pencil"></i> Editar
                                            </button>
                                            <button class="btn-action btn-eliminar btn-sm"
                                                    @onclick="() => Eliminar(empleado.IdEmpleado)">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                <tfoot>
                    <tr>
                        <td colspan="6" class="table-footer">
                            <button class="btn-volver" @onclick="Volver">
                                <i class="bi bi-arrow-left"></i> Volver
                            </button>
                        </td>
                    </tr>
                </tfoot>
            </div>
        </div>
    </div>
</div>
@code {
    private string ValorFiltro { get; set; } = ""; 
    private string Filtro { get; set; } = ""; 

    private List<Empleados> Empleados = new();
    private bool isLoading = true;

    private List<Empleados> EmpleadosFiltrados => AplicarFiltroYBusqueda();


    protected override async Task OnInitializedAsync()
    {
        await CargarEmpleados();
    }

    private async Task CargarEmpleados()
    {
        isLoading = true;
        try
        {
            Empleados = await empleadoService.ListarTodosAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar empleados: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }


    private List<Empleados> AplicarFiltroYBusqueda()
    {
        var lista = Empleados.AsEnumerable();
        var textoBusqueda = ValorFiltro.Trim().ToLower();

        if (!string.IsNullOrWhiteSpace(textoBusqueda))
        {
            if (Filtro == "Nombre")
            {
                lista = lista.Where(e => e.Nombre != null && e.Nombre.ToLower().Contains(textoBusqueda));
            }
            else if (Filtro == "Cargo")
            {
                lista = lista.Where(e => e.Cargo != null && e.Cargo.ToLower().Contains(textoBusqueda));
            }
            else if (Filtro == "IdEmpleado")
            {
                if (int.TryParse(ValorFiltro.Trim(), out int idBusqueda))
                {
                    lista = lista.Where(e => e.IdEmpleado == idBusqueda);
                }
                else
                {
                    return new List<Empleados>();
                }
            }
            else 
            {
                lista = lista.Where(e => (e.Nombre != null && e.Nombre.ToLower().Contains(textoBusqueda)) ||
                                         (e.Cargo != null && e.Cargo.ToLower().Contains(textoBusqueda)) ||
                                          e.IdEmpleado.ToString().Contains(textoBusqueda));
            }
        }


        if (Filtro == "Cargo")
        {
            lista = lista.OrderBy(e => e.Cargo);
        }
        else if (Filtro == "IdEmpleado")
        {
            lista = lista.OrderBy(e => e.IdEmpleado);
        }


        return lista.ToList();
    }


    private void RegistrarNuevo()
    {
        navigationManager.NavigateTo("/registro-empleado");
    }

    private void Modificar(int id)
    {
        navigationManager.NavigateTo($"/modificar-empleado/{id}");
    }

    private async Task Eliminar(int id)
    {
        Console.WriteLine($"Intentando eliminar empleado con ID: {id}");

        if (await empleadoService.Eliminar(id))
        {
            await CargarEmpleados();
        }
        else
        {
            Console.WriteLine("Error al intentar eliminar el empleado.");
        }
    }

    private void Buscar()
    {
    }


    private void Volver()
    {
        navigationManager.NavigateTo("/");
    }
}