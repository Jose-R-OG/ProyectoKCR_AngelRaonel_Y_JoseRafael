@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador")]

@page "/lista-empleados"


@layout MainLayout
@inject NavigationManager navigationManager
@inject EmpleadoService empleadoService
@rendermode InteractiveServer

<div class="lista-empleados-page">
    <div class="content">
        <div class="list-card">

            <h1 class="list-title">LISTADO DE EMPLEADOS</h1>

            <div class="top-toolbar">
                <div class="filter-group">
                    <label for="filter-select">Filtrar por</label>
                    <select id="filter-select" class="form-select" @bind="Filtro">
                        <option value="">Seleccione</option>
                        <option value="Nombre">Nombre</option>
                        <option value="Cargo">Cargo</option>
                        <option value="IdEmpleado">ID</option>
                    </select>
                </div>
                <div class="search-group">
                    <label for="search-input">Búsqueda</label>
                    <div class="search-input-container">
                        <input type="text" id="search-input" class="form-control" placeholder="Buscar" @bind="ValorFiltro" @oninput="Buscar" />
                        <span class="search-icon">🔍</span>
                    </div>
                </div>
            </div>

            <div class="table-container">
                <table class="empleados-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Cédula</th>
                            <th>Cargo</th>
                            <th>Usuario</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var empleado in ListaEmpleado)
                        {
                            <tr>
                                <td>@empleado.IdEmpleado</td>
                                <td>@empleado.Nombre</td>
                                <td>@empleado.Cedula</td>
                                <td>@empleado.Cargo</td>
                                <td>@empleado.Usuario</td>
                                <td>
                                    <button class="btn-action btn-modificar" @onclick="() => Modificar(empleado.IdEmpleado)">Modificar</button>
                                    <button class="btn-action btn-eliminar" @onclick="() => Eliminar(empleado.IdEmpleado)">Eliminar</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="bottom-bar">
                <button class="btn-action btn-volver" @onclick="Volver">
                    <span class="icon">⬅️</span> Volver
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;
    private List<Empleados> ListaEmpleado { get; set; } = new List<Empleados>();

    protected override async Task OnInitializedAsync()
    {
        ListaEmpleado = await empleadoService.Listar(e => e.IdEmpleado > 0);
    }

    public async Task Buscar()
    {
        if (ValorFiltro.Trim() != "")
        {
            if (Filtro == nameof(Empleados.Nombre)) ListaEmpleado = await empleadoService.Listar(e => e.Nombre.ToLower().Contains(ValorFiltro.ToLower()));
            else if (Filtro == nameof(Empleados.Cargo)) ListaEmpleado = await empleadoService.Listar(e => e.Cargo.ToLower().Contains(ValorFiltro.ToLower()));
            else if (Filtro == nameof(Empleados.IdEmpleado) && int.TryParse(ValorFiltro, out var Id)) ListaEmpleado = await empleadoService.Listar(e => e.IdEmpleado > Id);
        }
    }

    public async Task Eliminar(int id)
    {
        await empleadoService.Eliminar(id);
    }



    public async Task Modificar(int id)
    {

    }



    private void Volver()
    {
        navigationManager.NavigateTo("/");
    }
}